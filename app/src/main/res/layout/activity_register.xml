<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="www.myapp.com.marketing.activities.Register"
    android:background="@drawable/colorstyle"
    android:padding="30dp">




            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/select_img"
                android:layout_width="149dp"
                android:layout_height="128dp"
               android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:src="@drawable/person_img"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:id="@+id/fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:layout_below="@+id/select_img"
                android:layout_alignParentStart="true"
                android:layout_marginTop="26dp" />

            <EditText
                android:id="@+id/u_email"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Email"
                android:inputType="textPersonName"
                android:layout_below="@+id/fname"
                android:layout_alignParentStart="true"
                android:layout_marginTop="21dp" />

            <EditText
                android:id="@+id/u_password"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPersonName"
                android:layout_below="@+id/u_email"
                android:layout_alignParentStart="true"
                android:layout_marginTop="24dp" />
