    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1"
    android:padding="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_margin="10dp"
        android:id="@+id/chat_image"
